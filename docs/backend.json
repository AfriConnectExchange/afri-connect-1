
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "The user's unique ID, matching their Firebase Auth UID."
        },
        "auth_user_id": {
          "type": "string",
          "description": "The Firebase Auth UID."
        },
        "full_name": {
          "type": "string",
          "description": "The user's full name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "phone_number": {
          "type": "string",
          "description": "The user's phone number."
        },
        "avatar_url": {
            "type": "string",
            "format": "uri",
            "description": "URL of the user's profile picture."
        },
        "address_line1": {
            "type": "string",
            "description": "User's primary address."
        },
        "primary_role": {
          "type": "string",
          "enum": ["buyer", "seller", "sme", "trainer", "admin"],
          "description": "The user's primary role in the application."
        },
        "onboarding_completed": {
          "type": "boolean",
          "description": "Flag indicating if the user has completed the onboarding process."
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["id", "auth_user_id", "email", "primary_role", "onboarding_completed"]
    },
    "Message": {
      "title": "Twilio Message",
      "description": "Represents an SMS or WhatsApp message to be sent by the Twilio extension.",
      "type": "object",
      "properties": {
        "to": {
          "type": "string",
          "description": "The E.164 formatted phone number to send the message to."
        },
        "body": {
          "type": "string",
          "description": "The content of the message."
        },
        "from": {
          "type": "string",
          "description": "Optional. A Twilio phone number or Messaging Service SID to send from."
        },
        "delivery": {
          "type": "object",
          "description": "State of the message delivery, managed by the Twilio extension.",
          "properties": {
            "state": {
              "type": "string",
              "enum": ["PENDING", "PROCESSING", "SUCCESS", "ERROR"]
            },
            "startTime": { "type": "string", "format": "date-time" },
            "endTime": { "type": "string", "format": "date-time" },
            "errorCode": { "type": "string" },
            "errorMessage": { "type": "string" },
            "info": { "type": "object" }
          }
        }
      },
      "required": ["to", "body"]
    },
    "Category": {
      "title": "Product Category",
      "description": "Represents a category for products.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the category."
        },
        "description": {
          "type": "string",
          "description": "A short description of the category."
        },
        "parentId": {
          "type": ["string", "null"],
          "description": "The ID of the parent category, if this is a sub-category."
        },
        "productCount": {
          "type": "number",
          "description": "The number of products associated with this category."
        }
      },
      "required": ["name", "productCount"]
    },
    "Mail": {
        "title": "Email",
        "description": "Represents an email to be sent by the 'Trigger Email from Firestore' extension.",
        "type": "object",
        "properties": {
            "to": {
                "type": "array",
                "items": { "type": "string", "format": "email" }
            },
            "message": {
                "type": "object",
                "properties": {
                    "subject": { "type": "string" },
                    "html": { "type": "string" }
                },
                "required": ["subject", "html"]
            }
        },
        "required": ["to", "message"]
    }
  },
  "auth": {
    "providers": ["anonymous", "email", "phone"]
  },
  "firestore": {
    "/profiles/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public and private user profile information."
    },
    "/messages/{messageId}": {
      "schema": {
        "$ref": "#/entities/Message"
      },
      "description": "Collection monitored by the Twilio Send Messages extension to trigger SMS/WhatsApp messages."
    },
    "/categories/{categoryId}": {
        "schema": {
            "$ref": "#/entities/Category"
        },
        "description": "Stores product categories and sub-categories."
    },
    "/mail/{mailId}": {
        "schema": {
            "$ref": "#/entities/Mail"
        },
        "description": "Collection monitored by the 'Trigger Email from Firestore' extension to send emails."
    }
  }
}
